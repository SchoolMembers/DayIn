<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/solid_background">
        <shape android:shape="rectangle">
            <solid android:color="@color/green1"/>
        </shape>
    </item>
    <item android:id="@+id/stroke_background" android:bottom="2dp" android:left="-4dp" android:right="-4dp" android:top="-4dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="3dp"
                android:color="@color/green2"/>
        </shape>
    </item>
</layer-list>