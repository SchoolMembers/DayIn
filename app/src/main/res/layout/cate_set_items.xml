<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/time_back"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal"
    android:gravity="top|start">
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/cate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:fontFamily="@font/okticon_regular"
            android:text="@string/catePlus"
            android:textColor="@color/black"
            android:padding="5dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="7"
                android:textSize="12sp"
                android:fontFamily="@font/okticon_regular"
                android:text="@string/autoMoneyCount"
                android:gravity="center_vertical|start"/>
            <TextView
                android:id="@+id/autoMoneyCount"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="5"
                android:textSize="12sp"
                android:fontFamily="@font/okticon_regular"
                android:text="0 개"
                android:gravity="center_vertical|end"
                android:paddingEnd="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="7"
                android:textSize="12sp"
                android:fontFamily="@font/okticon_regular"
                android:text="@string/moneyCount"
                android:gravity="center_vertical|start"/>
            <TextView
                android:id="@+id/moneyCount"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="5"
                android:textSize="12sp"
                android:fontFamily="@font/okticon_regular"
                android:text="0 개"
                android:gravity="center_vertical|end"
                android:paddingEnd="10dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>