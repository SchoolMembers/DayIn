<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <android.widget.Button
            android:id="@+id/backButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="start|center_vertical"
            android:background="@drawable/back_icon"
            android:layout_marginStart="15dp"/>
    </LinearLayout>

    <View
        android:id="@id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/darkGray"
        app:layout_constraintTop_toBottomOf="@+id/topBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ScrollView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fillViewport="true"
        android:orientation="vertical"
        android:layout_marginBottom="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="100dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="홈"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/okticon_regular"
                android:gravity="center"
                android:layout_marginTop="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray"
                android:layout_marginBottom="10dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="달력을 옆으로 스크롤 하여 넘길 수도 있지만, 상단 바의 날짜를 클릭하여 이동할 수도 있어요!"
                android:textSize="13sp"
                android:textColor="@color/darkGray"
                android:fontFamily="@font/okticon_regular"
                android:gravity="center"
                android:layout_marginTop="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="달력은 현재 날짜 기준으로 전후 약 100개월까지로 제한되어 있어요!"
                android:textSize="13sp"
                android:textColor="@color/darkGray"
                android:fontFamily="@font/okticon_regular"
                android:gravity="center"
                android:layout_marginTop="30dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="일정"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/okticon_regular"
                android:gravity="center"
                android:layout_marginTop="30dp"/>
            <View
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:background="@color/gray"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="날짜 셀 클릭 후 별표 버튼을 누르면 중요 날짜로 지정할 수 있어요!"
                android:textSize="13sp"
                android:textColor="@color/darkGray"
                android:fontFamily="@font/okticon_regular"
                android:gravity="center"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="중요 날짜 색상은 메뉴에서 변경할 수 있어요."
                android:textSize="13sp"
                android:textColor="@color/darkGray"
                android:fontFamily="@font/okticon_regular"
                android:gravity="center"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="같은 일정을 여러 개 추가해야할 때 자동 등록 기능을 이용하면 쉽게 등록할 수 있어요."
                android:textSize="13sp"
                android:textColor="@color/darkGray"
                android:fontFamily="@font/okticon_regular"
                android:gravity="center"
                android:layout_marginTop="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="시간 등록 기능을 이용하면 어느 시간에 일정을 수행해야 할지 쉽게 볼 수 있어요."
                android:textSize="13sp"
                android:textColor="@color/darkGray"
                android:fontFamily="@font/okticon_regular"
                android:gravity="center"
                android:layout_marginTop="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="일정을 등록할 때 색상을 지정하면 다른 일정과 쉽게 구분할 수 있어요."
                android:textSize="13sp"
                android:textColor="@color/darkGray"
                android:fontFamily="@font/okticon_regular"
                android:gravity="center"
                android:layout_marginTop="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="일정은 시간 등록을 하지 않은 것부터 표시되고, 시간 등록이 활성화되어있는 일정은 시간 순서로 표시돼요!"
                android:textSize="13sp"
                android:textColor="@color/darkGray"
                android:fontFamily="@font/okticon_regular"
                android:gravity="center"
                android:layout_marginTop="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="일정 수정에서 자동 등록 기능은 이용할 수 없어요."
                android:textSize="13sp"
                android:textColor="@color/darkGray"
                android:fontFamily="@font/okticon_regular"
                android:gravity="center"
                android:layout_marginTop="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="자동 등록 항목을 수정할 때는 제목과 자동 등록 항목을 수정할 수 없어요."
                android:textSize="13sp"
                android:textColor="@color/darkGray"
                android:fontFamily="@font/okticon_regular"
                android:gravity="center"
                android:layout_marginTop="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="자동 등록에서 매주 항목을 이용하면 등록일 이후 52주만큼 해당 요일에 일정이 추가로 등록돼요!"
                android:textSize="13sp"
                android:textColor="@color/darkGray"
                android:fontFamily="@font/okticon_regular"
                android:gravity="center"
                android:layout_marginTop="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="자동 등록에서 매달 항목을 이용하면 등록일 이후 12개월만큼 해당 일(9일 등)에 일정이 추가로 등록돼요!"
