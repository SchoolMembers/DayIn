<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/memoEdit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center">
        <EditText
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:layout_marginStart="15dp"
            android:layout_gravity="center"
            android:fontFamily="@font/okticon_regular"
            android:hint="@string/title"
            android:textSize="20sp"
            android:maxLines="1"
            android:maxLength="20"
            android:background="@color/white"/>

        <android.widget.Button
            android:id="@+id/checkButton"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.4"
            android:layout_gravity="center"
            android:background="@drawable/save_icon"
            android:layout_marginEnd="15dp"/>

        <android.widget.Button
            android:id="@+id/closeButton"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.4"
            android:layout_gravity="center"
            android:background="@drawable/close_icon"
            android:layout_marginEnd="15dp"/>
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/darkGray"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <HorizontalScrollView
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/color"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/okticon_regular"
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="@string/colorText"
                android:textColor="@color/gray"
                android:visibility="visible"/>

            <LinearLayout
                android:id="@+id/color_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <android.widget.Button
                    android:id="@+id/colorDefault"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/circle_icon"
                    android:backgroundTint="@color/lightGray" />
                <android.widget.Button
                    android:id="@+id/colorGray"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/circle_icon"
                    android:backgroundTint="@color/darkGray" />
                <android.widget.Button
                    android:id="@+id/colorYellow"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/circle_icon"
                    android:backgroundTint="@color/yellow" />
                <android.widget.Button
                    android:id="@+id/colorPurple"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/circle_icon"
                    android:backgroundTint="@color/purple1" />
                <android.widget.Button
                    android:id="@+id/colorBlue"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/circle_icon"
                    android:backgroundTint="@color/blue1" />
                <android.widget.Button
                    android:id="@+id/colorGreen"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/circle_icon"
                    android:backgroundTint="@color/green1" />
                <android.widget.Button
                    android:id="@+id/colorRed"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/circle_icon"
                    android:backgroundTint="@color/pink" />

            </LinearLayout>

            <TextView
                android:id="@+id/font"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/okticon_regular"
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="@string/fontText"
                android:textColor="@color/gray"
                android:visibility="visible"/>

            <LinearLayout
                android:id="@+id/font_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/font_one"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/okticon_regular"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="@string/defaultText"
                    android:textColor="@color/gray"
                    android:layout_marginEnd="5dp"/>

                <TextView
                    android:id="@+id/font_two"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/alice"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="@string/defaultText"
                    android:textColor="@color/gray"
                    android:layout_marginEnd="5dp"/>

                <TextView
                    android:id="@+id/font_three"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/dong"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="@string/defaultText"
                    android:textColor="@color/gray"
                    android:layout_marginEnd="5dp"/>

                <TextView
                    android:id="@+id/font_four"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/magic"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="@string/defaultText"
                    android:textColor="@color/gray"
                    android:layout_marginEnd="5dp"/>

                <TextView
                    android:id="@+id/font_five"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/okticon_bold"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="@string/defaultText"
                    android:textColor="@color/gray"
                    android:layout_marginEnd="5dp"/>

                <TextView
                    android:id="@+id/font_six"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/okticon_light"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="@string/defaultText"
                    android:textColor="@color/gray"
                    android:layout_marginEnd="5dp"/>

                <TextView
                    android:id="@+id/font_seven"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/simple"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="@string/defaultText"
                    android:textColor="@color/gray"
                    android:layout_marginEnd="5dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/style"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/okticon_regular"
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="@string/styleText"
                android:textColor="@color/gray"
                android:visibility="visible"/>

            <LinearLayout
                android:id="@+id/style_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/style_one"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/okticon_light"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="@string/defaultText"
                    android:textColor="@color/gray"
                    android:layout_marginEnd="5dp"/>

                <TextView
                    android:id="@+id/style_two"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/okticon_light"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textStyle="italic"
                    android:text="@string/defaultText"
                    android:textColor="@color/gray"
                    android:layout_marginEnd="5dp"/>

            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/darkGray"
        app:layout_constraintTop_toBottomOf="@+id/bottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/line2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="@string/memoHint"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>